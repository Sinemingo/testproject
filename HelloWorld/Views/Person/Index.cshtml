@model List<HelloWorld.Business.Dtos.PersonDto> 
<div class="row">
<ul class="list-group col-md-6 mt-md-5">
    @foreach (var item in Model)
    {
     <li class="list-group-item">Adı:@item.Name , Yaşı: @item.Age</li>
    }
</ul>
<form class="col-md-6" method="post" action="/Person/PersonSave">
  <h2>Yeni Personel Kaydet</h2>
  <div class="form-group">
    <label for="inputAdSoyad">Ad Soyad</label>
    <input type="text" class="form-control" name="Name" id="inputAdSoyad" placeholder="Ad Soyad">
  </div>
  <div class="form-group">
    <label for="inputYas">Yaş</label>
    <input type="number" class="form-control" name="Age" id="inputYas" placeholder="Yaşınız">
  </div>
  <button type="submit" class="btn btn-lg btn-primary mt-5">Kaydet</button>
</form>
</div>